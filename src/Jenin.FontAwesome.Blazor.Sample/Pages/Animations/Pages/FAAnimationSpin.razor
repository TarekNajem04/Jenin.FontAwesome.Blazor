@page "/animation-spin"

<PageTitle>Font Awesome Animation Spin</PageTitle>

<IconContainer CssClass="mb-1" FixedWidth=false IconSize=IconSize.X03>
    <Icons>
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-sync" Animation=@Animation.Spin() Color="#007AFF" />
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-circle-notch" Animation=@Animation.Spin() Color="#007AFF" />
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-cog" Animation=@Animation.Spin() Color="#007AFF" />
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-cog" Animation=@Animation.Spin(reverse: true) Color="#007AFF" />
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-spinner" Animation=@Animation.Spin(pulse: true) Color="#007AFF" />
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-spinner" Animation=@Animation.Spin(pulse: true, reverse: true) Color="#007AFF" />
    </Icons>
</IconContainer>
