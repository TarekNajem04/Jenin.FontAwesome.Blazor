@page "/animation-fade"

<PageTitle>Font Awesome Animation Fade</PageTitle>

<IconContainer CssClass="mb-1" FixedWidth=false IconSize=IconSize.X03>
    <Icons>
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-triangle-exclamation" Animation=@Animation.Fade() Color="#007AFF" />
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-skull-crossbones" Animation=@Animation.Fade() Color="#007AFF" />
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-computer" Animation=@Animation.Fade() Color="#007AFF" />
        <Icon CssClass="me-4" IconStyle=IconStyle.Solid IconName="fa-i-cursor" Animation=@Animation.Fade(opacity: 0.6F, durationUnit: DurationUnit.Seconds, duration: 2.00F) Color="#007AFF" />
    </Icons>
</IconContainer>